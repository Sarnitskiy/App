@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h4 class="mt-5 text-center">Вход</h4>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Authentication" asp-action="Login" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Login" class="form-control" placeholder="Логин"
                       value="test@test.ru"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Пароль" 
                       value="12345"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block btn-lg" value="Войти" />
            </div>
        </form>
    </div>
</div>
